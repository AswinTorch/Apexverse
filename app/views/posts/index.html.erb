<!-- Grid -->
<div class="container">
  <!--Media List Carousel-->
  <div class= "list_carousel responsive"> 
    <div class= "caroufredsel_wrapper">
      <div id="issue-slider">
        <div class="als-item issue">
          <a href "#"> </a>
        </div>
      </div>
    </div>
  </div>

  <!--Hello-->
  
  
  
  
  
  
  <!-- Blog entries -->
  <% @posts.each do |post| %>
    <div class="">
      <!-- Blog entry -->
      <div class="w3-card-4 w3-margin w3-white">
        <div class="w3-container w3-padding-8">
          
            <div class="post-preview">
              <h1><b><%= post.title %></b></h1>
              <h5><span class="w3-opacity"><%= post.created_at.strftime("%B, %d, %Y") %></span></h5>
            </div>
            <hr>
          
        </div>
    
        <div class="w3-container">
          <p><%=h truncate(post.content, :length => 323) %></p>
          <div class="w3-row">
            <div class="w3-col m8 s12">
              <p><button class="w3-button w3-padding-large w3-white w3-border"><b><%= link_to "READ MORE Â»", post %></b></button></p>
            </div>
            <div class="w3-col m4 w3-hide-small">
              <p><span class="w3-padding-large w3-right"><b>Comments </b> <span class="w3-tag">0</span></span></p>
            </div>
          </div>
        </div>
      </div>
      <hr>
    </div>
  <% end %>
  
</div>
  
<div class ="container">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.name %></td>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>

  <%= link_to 'New Post', new_post_path %>
</div>
