<!-- Grid -->
<div class="container">
  <!--Media List Carousel-->


  
  <!-- Blog entries -->
  <% @posts.each do |post| %>
    <div class="">
      <!-- Blog entry -->
      <div class="w3-card-4 w3-margin w3-white">
        <img src="<%= post.banner_image_url %>" alt="" style="width:100%" > 
        <div class="w3-container w3-padding-8">
          
            <div class="post-preview">
              <h1><b><%= post.title %></b></h1>
              <h5><%= post.name %>, <span class="w3-opacity"><%= post.created_at.strftime("%B, %d, %Y") %></span></h5>
            </div>
            <hr>
          
        </div>
    
        <div class="w3-container">
          <p><%=h truncate(post.content, :length => 323) %></p>
          <div class="w3-row">
            <div class="w3-col m8 s12">
              <%= link_to "READ MORE Â»", post, class: 'w3-button w3-black w3-padding-large w3-hover-white' %>
            </div>
            <div class="w3-col m4 w3-hide-small">
              <p><span class="w3-padding-large w3-right w3-hover-white"><b>Comments </b> <span class="w3-tag"><%= post.comments.size %></span></span></p>
            </div>
          </div>
        </div>
        <br>
      </div>
      <hr>
    </div>
  <% end %>
  
  
    <!-- Labels / tags -->
