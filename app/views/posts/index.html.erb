<div class="w3-content" style="max-width:1400px">
  
  <!-- Grid -->
  <div class="w3-row">
  
  <!-- Blog entries -->
  <div class="w3-col l8 s12">
    <!-- Blog entry -->
    <% @posts.each do |post| %>
    <div class="w3-card-4 w3-margin w3-white">
      <img src="<%= post.banner_image_url %>" alt="" style="width:100%" >
      <div class="w3-container w3-padding-8">
        <h1 id="post-title"><b><%= post.title %></b></h1>
        <h5 id="post-info"><%= post.name %> , <span class="w3-opacity"><%= post.created_at.strftime("%B %d %Y") %></span></h5>
      </div>
  
      <div class="w3-container">
        <p id="post-truncated"><%=h truncate(post.content, :length => 323) %></p>
        <div class="w3-row">
          <div class="w3-col m8 s12">
            <%= button_to "READ MORE", post, class: 'invert-button', :method => "get" %>
          </div>
          <div class="w3-col m4 w3-hide-small">
            <p class="w3-right"><b>Comments </b> <span class="w3-tag"><%= post.comments.size %></span></p>
          </div>
        </div>
      </div>
      <br>
    </div>
    <% end %>
  <!-- END BLOG ENTRIES -->
  </div>
  
  <!-- Introduction menu -->
  <div class="w3-col l4">
    
    <!-- Posts -->
    <div class="w3-card-2 w3-margin">
      <div class="w3-container w3-padding">
        <h4>Popular Posts</h4>
      </div>
      <ul class="w3-ul w3-hoverable w3-white">
        <li class="w3-padding-16">
          <img src="/w3images/workshop.jpg" alt="Image" class="w3-left w3-margin-right" style="width:50px">
          <span class="w3-large">Lorem</span><br>
          <span>Sed mattis nunc</span>
        </li>
        <li class="w3-padding-16">
          <img src="/w3images/gondol.jpg" alt="Image" class="w3-left w3-margin-right" style="width:50px">
          <span class="w3-large">Ipsum</span><br>
          <span>Praes tinci sed</span>
        </li> 
        <li class="w3-padding-16">
          <img src="/w3images/skies.jpg" alt="Image" class="w3-left w3-margin-right" style="width:50px">
          <span class="w3-large">Dorum</span><br>
          <span>Ultricies congue</span>
        </li>   
        <li class="w3-padding-16 w3-hide-medium w3-hide-small">
          <img src="/w3images/rock.jpg" alt="Image" class="w3-left w3-margin-right" style="width:50px">
          <span class="w3-large">Mingsum</span><br>
          <span>Lorem ipsum dipsum</span>
        </li>  
      </ul>
    </div>
     
   
    <!-- Labels / tags -->
    <div class="w3-card-2 w3-margin">
      <div class="w3-container w3-padding">
        <h4>Tags</h4>
      </div>
      <div class="w3-container w3-white">
        <p>
          <% ActsAsTaggableOn::Tag.all.each do |tag| %>
            <span class="w3-tag w3-light-grey w3-small w3-margin-bottom"><%= link_to tag.name, posts_path(tag: tag.name) %></span>
          <% end %>
        </p>
      </div>
    </div>
    
  <!-- END Introduction Menu -->
  </div>
  
  <!-- END GRID -->
  </div><br>
  
  
  
  
  
</div>

